<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp">



        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Amount"
            android:textSize="20dp"
            android:layout_toLeftOf="@+id/paidornot"
            android:layout_alignParentLeft="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/paidornot"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/amount"
            android:layout_marginTop="2dp"
            android:text="Time" />

        <TextView
            android:id="@+id/reason"
            android:layout_toLeftOf="@+id/paidornot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/time"
            android:text="Reason"
            android:textStyle="italic" />


    <TextView
        android:id="@+id/paidornot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="paid or not ?"
        android:layout_toLeftOf="@+id/deleterowbtn"
        android:textSize="20dp"
        android:textStyle="italic" />

    <com.cuboid.cuboidcirclebutton.CuboidButton
        android:id="@+id/deleterowbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Update"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:textSize="10dp"
        app:cub_color="#07064c" />


</RelativeLayout>