<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.game.dhanraj.lenden.updateRadioButton">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Paid?"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:id="@+id/paidtheradiobtn1"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RadioGrp1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/paidtheradiobtn1">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taken"
            android:id="@+id/YES1"
            android:textStyle="bold"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Not Taken"
            android:checked="true"
            android:id="@+id/NO1"
            android:textStyle="bold"
            />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Update Reason"
        android:layout_below="@+id/RadioGrp1"
        android:id="@+id/updatereasontext1"
        android:layout_marginTop="5dp"
        android:textStyle="bold"/>


    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/updatereasontext1"
        android:layout_marginTop="10dp"
        android:textStyle="italic|bold"
        android:textAlignment="center"
        android:id="@+id/reasonedittext1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Update Debt Amount"

        android:layout_below="@+id/reasonedittext1"
        android:id="@+id/updatedebtamounttext1"
        android:layout_marginTop="5dp"
        android:textStyle="bold"/>


    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/updatedebtamounttext1"
        android:layout_marginTop="10dp"
        android:textStyle="italic|bold"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:id="@+id/debtamountedittext1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/debtamountedittext1"
        android:layout_centerHorizontal="true"
        android:text="Save"
        android:layout_marginTop="20dp"
        android:id="@+id/savetheradiobutton"
        android:onClick="savethevalueoftheradiobutton1"
        android:textStyle="bold"/>


</RelativeLayout>
