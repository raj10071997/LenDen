<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/arrowcustomdena"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_action_name" />



        <TextView
            android:id="@+id/customrownamedena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Name"
            android:layout_toLeftOf="@+id/upgradebutton"
            android:layout_toRightOf="@+id/arrowcustomdena"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailidcustomrowdena"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/upgradebutton"
            android:layout_toRightOf="@+id/arrowcustomdena"
            android:layout_below="@+id/customrownamedena"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Emailid"
            android:textStyle="italic"/>



        <TextView
            android:id="@+id/numbercustomrowdena"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/upgradebutton"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/arrowcustomdena"
            android:layout_below="@+id/emailidcustomrowdena"
            android:layout_marginTop="5dp"
            android:text="Number" />

        <TextView
            android:id="@+id/iit"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/arrowcustomdena"
            android:layout_toLeftOf="@+id/upgradebutton"
            android:layout_below="@+id/numbercustomrowdena"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="id" />

    <com.cuboid.cuboidcirclebutton.CuboidButton
        android:id="@+id/upgradebutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:text="Update"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        app:cub_color="#07064c" />


</RelativeLayout>