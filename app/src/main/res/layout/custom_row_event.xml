<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/arrowcustomevent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_action_name" />



    <TextView
        android:id="@+id/customrownameevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Name of the event"
        android:layout_toRightOf="@+id/arrowcustomevent"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timecustomrowevent"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/arrowcustomevent"
        android:layout_below="@+id/customrownameevent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="Time of the event(created)"
        android:textStyle="italic"/>



    <TextView
        android:id="@+id/idcustomrowevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/arrowcustomevent"
        android:layout_below="@+id/timecustomrowevent"
        android:layout_marginTop="5dp"
        android:text="id" />






</RelativeLayout>