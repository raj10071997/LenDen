<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp">



    <TextView
        android:id="@+id/Nameofexpend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Name"
        android:textSize="20dp"
        android:layout_toLeftOf="@+id/updatelistofexpend"
        android:layout_alignParentLeft="true"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/Reasonforexpend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/updatelistofexpend"
        android:layout_marginTop="2dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Nameofexpend"
        android:text="Reason"
        android:textStyle="italic" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/updatelistofexpend"
        android:layout_marginTop="2dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Reasonforexpend"
        android:text="Time"
        android:id="@+id/timeofexpend"
        android:textStyle="italic"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/updatelistofexpend"
        android:layout_marginTop="2dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/timeofexpend"
        android:text="Amount"
        android:textStyle="italic"
        android:id="@+id/amountinevent"
        />




    <com.cuboid.cuboidcirclebutton.CuboidButton
        android:id="@+id/updatelistofexpend"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Update"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:textSize="10dp"
        app:cub_color="#07064c" />


</RelativeLayout>