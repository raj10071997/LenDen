<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.game.dhanraj.lenden.AddDebt">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:text="Name"
        android:textStyle="bold|italic"
        android:textSize="25dp"
        android:id="@+id/addinfoofnameevent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/addinfoofreason12"
        android:layout_marginLeft="150dp"
        android:maxLines="20"
        android:id="@+id/editreasonexpend1"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/addinfoofnameevent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:text="Reason"
        android:textStyle="bold|italic"
        android:textSize="25dp"
        android:id="@+id/addinfoofreason12"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addinfoofnameevent"
        android:layout_marginLeft="150dp"
        android:id="@+id/editaddinfolistofmember12"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:text="ADD"
        android:layout_marginBottom="15dp"
        android:id="@+id/addkardebe11"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold|italic"
        android:textSize="25dp"
        android:text="Amount"
        android:id="@+id/amountofmemberexpend"
        android:layout_below="@+id/addinfoofreason12"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_below="@+id/editreasonexpend1"
        android:id="@+id/edittextamountofexpend"
        />




</RelativeLayout>
