<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.game.dhanraj.lenden.updating">


    <TextView
        android:id="@+id/textviewupdatingemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Email ID :"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/updatingemailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="10dp"
        android:text="email"
        android:textSize="25dp"
        android:textStyle="bold|italic"

        />

    <TextView
        android:id="@+id/textviewupdatingnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updatingemailid"
        android:text="Number :"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/updatingumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignBottom="@+id/textviewupdatingnumber"
        android:layout_marginLeft="120dp"
        android:text="number"
        android:textSize="25dp"

        android:textStyle="bold|italic"

        />


    <com.cuboid.cuboidcirclebutton.CuboidButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="Update Data"
        android:textStyle="italic"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:id="@+id/updateDatabutton"
        android:layout_alignParentBottom="true"
        app:cub_color = "#b91616"

        android:onClick="updateData"
        />



</RelativeLayout>
